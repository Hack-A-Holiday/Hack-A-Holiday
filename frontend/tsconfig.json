{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
  "moduleResolution": "bundler",
    // "ignoreDeprecations": "6.0", // Removed to fix Next.js build error
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
  // "ignoreDeprecations": "6.0", // Removed to fix Next.js build error
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Path aliases moved to tsconfig.paths.json if needed
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}