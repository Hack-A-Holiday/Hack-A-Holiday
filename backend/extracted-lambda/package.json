{
  "name": "travel-companion-backend",
  "version": "1.0.0",
  "description": "Backend Lambda functions for travel companion",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "package": "npm run build && cd dist && zip -r ../lambda-functions.zip .",
    "clean-package": "if exist lambda-package rmdir /s /q lambda-package && mkdir lambda-package",
    "copy-dist": "robocopy dist lambda-package\\dist /E /NFL /NDL /NJH /NJS /nc /ns /np || exit 0",
    "copy-package": "copy package.json lambda-package\\package.json > nul",
    "copy-lock": "if exist package-lock.json copy package-lock.json lambda-package\\package-lock.json > nul",
    "install-prod": "cd lambda-package && npm ci --only=production",
    "prepare-lambda-package": "npm run clean-package && npm run copy-dist && npm run copy-package && npm run copy-lock && npm run install-prod",
    "deploy-lambda-stack": "cd ..\\..\\infrastructure && cdk deploy TravelCompanion-Lambda-dev --require-approval never"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-agent-runtime": "^3.450.0",
    "@aws-sdk/client-bedrock-runtime": "^3.450.0",
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "@aws-sdk/s3-request-presigner": "^3.450.0",
    "axios": "^1.5.0",
    "google-auth-library": "^10.3.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "jwk-to-pem": "^2.0.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.0",
    "aws-cdk-lib": "^2.217.0",
    "aws-sdk-client-mock": "^3.0.0",
    "constructs": "^10.4.2",
    "jest": "^29.7.0"
  }
}
