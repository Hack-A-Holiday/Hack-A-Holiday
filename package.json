{
  "name": "travel-companion",
  "version": "1.0.0",
  "description": "Travel Companion Application - HackTravel Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "infrastructure"
  ],
  "scripts": {
    "install:all": "npm install && npm install --prefix frontend && npm install --prefix backend && npm install --prefix infrastructure",
    "build:all": "npm run build --prefix backend && npm run build --prefix frontend && npm run build --prefix infrastructure",
    "test:all": "npm run test --prefix backend && npm run test --prefix frontend",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "npm run build --prefix backend",
    "deploy:infra": "npm run deploy --prefix infrastructure",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules infrastructure/node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VarunGagwani/Hack-A-Holiday.git"
  },
  "keywords": [
    "travel",
    "aws",
    "lambda",
    "nextjs",
    "typescript",
    "ai",
    "bedrock"
  ],
  "author": "VarunGagwani",
  "license": "MIT",
  "dependencies": {
    "date-fns": "^4.1.0",
    "sweetalert2": "^11.23.0"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152"
  }
}
