# SageMaker Environment Configuration for Travel Companion

# Backend Lambda Environment Variables
AWS_REGION=us-east-1
SAGEMAKER_ENDPOINT_NAME=travel-assistant-endpoint
SAGEMAKER_REGION=us-east-1

# DynamoDB Tables (will be set by CDK deployment)
USERS_TABLE_NAME=${environment}-Users
TRIPS_TABLE_NAME=${environment}-Trips  
BOOKINGS_TABLE_NAME=${environment}-Bookings

# S3 Configuration
S3_BUCKET_NAME=${environment}-travel-companion-bucket

# AI Model Configuration
DEFAULT_AI_MODEL=bedrock
BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
SAGEMAKER_MODEL_TIMEOUT=60000
MAX_TOKENS=1000
TEMPERATURE=0.7

# Authentication
JWT_SECRET=your-secure-jwt-secret-here
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend Environment Variables (.env.local)
NEXT_PUBLIC_API_URL=https://your-api-gateway-url
NEXT_PUBLIC_SAGEMAKER_ENABLED=true
NEXT_PUBLIC_AI_MODELS=bedrock,sagemaker
NEXT_PUBLIC_DEFAULT_AI_MODEL=bedrock

# Development Environment (.env.development)
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_DEVELOPMENT_MODE=true

# Production Environment (.env.production)
NEXT_PUBLIC_API_URL=https://your-production-api-url
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# SageMaker Model Configuration
HUGGINGFACE_MODEL_ID=microsoft/DialoGPT-large
SAGEMAKER_INSTANCE_TYPE=ml.t2.medium
SAGEMAKER_SERVERLESS_MEMORY=4096
SAGEMAKER_MAX_CONCURRENCY=10

# Monitoring and Logging
LOG_LEVEL=info
CLOUDWATCH_LOG_GROUP=/aws/lambda/travel-companion
ENABLE_DETAILED_MONITORING=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token