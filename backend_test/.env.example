# Server Configuration
PORT=4000
NODE_ENV=development

# Frontend URL
FRONTEND_ORIGIN=http://localhost:3000

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Bedrock Nova Models
# Note: You must enable model access in AWS Bedrock console first!
# Go to: AWS Console > Bedrock > Model access > Enable Nova Pro and Nova Lite
REASONING_MODEL=us.amazon.nova-pro-v1:0
FAST_MODEL=us.amazon.nova-pro-v1:0
# Change FAST_MODEL to us.amazon.nova-lite-v1:0 after enabling Nova Lite access

# API Keys
RAPIDAPI_KEY=your-rapidapi-key
AMADEUS_API_KEY=your-amadeus-key
AMADEUS_API_SECRET=your-amadeus-secret
BOOKING_API_KEY=your-booking-key

# SageMaker Configuration
SAGEMAKER_ENDPOINT_NAME=travel-assistant-endpoint

# Database (if needed)
# DYNAMODB_TABLE_NAME=travel-companion-users
